<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" " http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lectopia.lab.persistence.BoardMapper">
	<resultMap type="com.lectopia.lab.domain.BoardVO" id="board">
		<id property="bno" column="bno" jdbcType="INTEGER"/>
		<id property="title" column="title" jdbcType="VARCHAR2"/>
		<id property="content" column="content" jdbcType="VARCHAR2"/>
		<id property="writer" column="writer" jdbcType="VARCHAR2"/>
		<id property="regdate" column="regdate" jdbcType="DATE"/>
		<id property="viewcnt" column="viewcnt" jdbcType="INTEGER"/>
	</resultMap>
	
	<sql id="columns">
		bno, title, content, writer, regdate, viewcnt
		<!-- date_format(regdate,'%Y-%m-%d %H:%i:%S') as regdate_str 오라클엔 적용안될수도;;-->
	</sql>
	
	<insert id="create">
	insert into tbl_board(bno,title,content,writer) 
	values(#{bno},#{title},#{content},#{writer})
	</insert>
	
	<select id="read" resultMap="board">
		select <include refid="columns"/>
			bno, title, content, writer, regdate, viewcnt
		from
			tbl_board
		where bno=#{bno}
	</select>
	
	<update id="update">
		update tbl_board set title=#{title}, content=#{content} where bno=#{bno}
	</update>
	
	<delete id="delete">
		delete from tbl_board where bno=#{bno}
	</delete>
	
	<select id="listAll" resultMap="board">
		select <include refid="columns"/>
		from
		tbl_board
		where bno >0
		order by bno desc, regdate desc
	</select>
</mapper>